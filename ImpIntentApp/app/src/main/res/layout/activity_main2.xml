<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    android:padding="15dp"
    tools:context=".MainActivity2">

    //relatuve view untuk tempat background rectangle
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        //text view untuk "masukkan nama anda"
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="54dp"
            android:layout_marginRight="54dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Masukkan Nama Anda"
            android:textColor="#000000"
            android:textSize="24sp" />

        //edit text untuk tempat input nama
        <EditText
            android:id="@+id/editTextnama"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp" />

        //explicit
        //button masuk untuk masuk ke bagian biodata
        //berpindah activity sekaligus mengirim data
        <Button
            android:id="@+id/btn_Masuk"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:layout_below="@+id/editTextnama"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Masuk"
            android:textSize="20sp"
            app:backgroundTint="#009688" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>